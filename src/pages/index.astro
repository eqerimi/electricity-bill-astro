---
import BillForm from "../components/BillForm";
const title = "Kosovo Electricity Bill Calculator";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Calculate your electricity bill for Kosovo using official 2025 tariff rates. Supports all tariff groups including household and business rates." />
    <style>
      * {
        box-sizing: border-box;
      }
      
      body {
        font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
        padding: 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        line-height: 1.6;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        overflow: hidden;
      }

      .header {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        color: white;
        padding: 2rem;
        text-align: center;
      }

      .header h1 {
        margin: 0 0 0.5rem 0;
        font-size: clamp(1.5rem, 4vw, 2.5rem);
        font-weight: 700;
      }

      .header p {
        margin: 0;
        opacity: 0.9;
        font-size: clamp(0.875rem, 2vw, 1.125rem);
      }

      nav {
        background: #f8f9fa;
        padding: 1rem 2rem;
        border-bottom: 1px solid #e9ecef;
      }

      nav a {
        color: #495057;
        text-decoration: none;
        margin-right: 1.5rem;
        font-weight: 500;
        padding: 0.5rem 0;
        border-bottom: 2px solid transparent;
        transition: all 0.2s ease;
      }

      nav a:hover {
        color: #4f46e5;
        border-bottom-color: #4f46e5;
      }

      .content {
        padding: 2rem;
      }

      .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
      }

      .feature {
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        text-align: center;
      }

      .feature-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
      }

      .feature h3 {
        margin: 0 0 0.5rem 0;
        color: #495057;
        font-size: 1.125rem;
      }

      .feature p {
        margin: 0;
        color: #6c757d;
        font-size: 0.875rem;
      }

      .divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, #e9ecef, transparent);
        margin: 2rem 0;
      }

      @media (max-width: 768px) {
        body {
          padding: 0.5rem;
        }
        
        .header {
          padding: 1.5rem 1rem;
        }
        
        nav {
          padding: 1rem;
          text-align: center;
        }
        
        nav a {
          margin: 0 0.75rem;
          font-size: 0.9rem;
        }
        
        .content {
          padding: 1rem;
        }

        .features {
          grid-template-columns: 1fr;
          gap: 1rem;
        }
      }

      @media (max-width: 480px) {
        nav {
          padding: 0.75rem;
        }
        
        nav a {
          display: inline-block;
          margin: 0.25rem 0.5rem;
        }

        .feature {
          padding: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>{title}</h1>
        <p>
          Official 2025 tariff calculator for accurate electricity bill estimation
        </p>
      </div>

      <nav>
        <a href="/" style="color: #4f46e5; border-bottom-color: #4f46e5;">Home</a>
        <a href="/about">About</a>
        <a href="/docs">Documentation</a>
      </nav>

      <div class="content">
        <div class="features">
          <div class="feature">
            <div class="feature-icon">âš¡</div>
            <h3>All Tariff Groups</h3>
            <p>Supports household and business tariffs with accurate 2025 rates</p>
          </div>
          <div class="feature">
            <div class="feature-icon">ðŸ§®</div>
            <h3>Detailed Breakdown</h3>
            <p>See exactly how your bill is calculated with transparent pricing</p>
          </div>
          <div class="feature">
            <div class="feature-icon">ðŸ“±</div>
            <h3>Mobile Friendly</h3>
            <p>Calculate bills on any device with responsive design</p>
          </div>
          <div class="feature">
            <div class="feature-icon">ðŸ”’</div>
            <h3>Secure & Private</h3>
            <p>All calculations happen securely without storing personal data</p>
          </div>
        </div>

        <div class="divider"></div>

        <BillForm client:load />
      </div>
    </div>
  </body>
</html>
